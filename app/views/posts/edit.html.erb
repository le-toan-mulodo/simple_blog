<% provide(:title, "Edit a blog")%> <h1>Update an article</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@post) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%= f.label :title%>
		<%= f.text_field :title %>

		<%= f.label :body%>
		<%= f.text_area :body, size: '40x25' %>

		<%= f.submit "Save changes", class: "btn btn-large btn-primary"%>
		<% end %>
	</div>
</div>


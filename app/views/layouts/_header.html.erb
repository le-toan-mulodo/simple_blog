<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Interactive Blog", '#',  class: 'brand'%>			
			<nav>
				<ul class="nav pull-right">
					<li  class="<%= 'active' if current_page?(root_path) %>">
						<%= link_to "Home", root_path %>
					</li>
					<li  class="<%= 'active' if current_page?(posts_path) %>">
						<%= link_to "Blogs", posts_path %>
					</li class="menu-header">
					<!-- <%= debug(session[:remember_token])%> -->
					<% if signed_in? %>
					<li  class="<%= 'active' if current_page?(users_path) %>">
						<%= link_to "Users", users_path %>
					</li class="menu-header">

					<li id="fat-menu" class="dropdown menu-header">
						<a href="#" id="drop-toggle" class="dropdown-toggle" data-toggle="dropdown"> <%= "#{current_user.name} (#{current_user.role.name})" %> <b class="caret"></b> </a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to "Update your profile", edit_user_path(current_user) %>
							</li>
							<li>
								<%= link_to "Your articles", current_user %>
							</li>
							<li class="divider"></li>
							<li>
								<%= link_to "Sign out", signout_path, method: "delete" %>
							</li>
						</ul>
					</li>
					<% else %>
					<li>
						<%= link_to "Sign in", signin_path %>
					</li>
					<% end %>
				</ul>
			</nav>
		</div>

	</div>
</header>